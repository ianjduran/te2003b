#include "poll_keyboard_task.h"
#include "cmsis_os.h"


uint8_t poll_keyboard_button_task(uint8_t row, uint8_t col){
	for(int i = 4; i < 8; i++){
		GPIOA->ODR |= 1 << i;
	}
	GPIOA->ODR &= ~(1 << row);

	// Read col
	return GPIOA->IDR & (1 << col);
}
